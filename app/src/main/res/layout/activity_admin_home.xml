<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    android:background="#00ff00"
    tools:context=".Admin.AdminHome">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="10dp"
    android:layout_weight="1">

    <TextView
        android:text="Admin Home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="30sp"/>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="10dp"
    android:background="#ff0033"
    android:layout_weight="1"
    android:weightSum="2"
    android:orientation="horizontal">

    <Button
        android:id="@+id/bstation"
        android:text="STATION"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/bcycle"
        android:text="CYCLE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="#ff0033"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/badhuser"
            android:text="USER"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="20sp">
        </Button>

        <Button
            android:id="@+id/bcomplaint"
            android:text="COMPLAINT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="20sp">
        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="#ff0033"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bfeedback"
            android:text="FEEDBACK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/bpayreturn"
            android:text="PAYMENT HISTORY AND RETURN CYCLE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>